<% content_for(:pre_main) do %>
    <nav class="secondary-nav post-nav">
      <div class="container">
        <ul class="list-inline">
          <%= content_tag_for 'li', @menu_categories do |blog_category| %>
              <%= link_to_active_class blog_category.name, blog_category_path(blog_category) %>
          <% end %>
        </ul>
      </div>
    </nav>
<% end %>
<div class="col-md-9">
  <header class="header-no-hero">
    <h1 class="h1-bold"><%= @blog_category.try(:name) || 'Hunting News' %></h1>
  </header>
  <%= render 'posts/list_content' %>
  <%= render 'shared/page_controls', collection: @posts, entry_name: 'Stories' %>
</div>
<%= render 'shared/ads_sidebar', count: 3 %>
