<%= form_tag '/locations', method: 'get', class: 'location-search location-search-hp' do |f| %>
    <div class="form-group form-group-lg">
      <label for="location">Where would you like to hunt?</label>
      <%= select_tag 'state_alpha2', options_for_select(Location.states), prompt: 'State?', class:'form-control', required: true %>
    </div>
    <div class="form-group form-group-lg">
      <label for="category_id">How would you like to hunt?</label>
      <%= select_tag 'category_id', options_from_collection_for_select(@categories, 'id', 'name'), include_blank: 'How?', class: 'form-control' %>
    </div>
    <div class="clearfix"></div>
    <%= submit_tag 'Go Hunt!', class: 'btn btn-info btn-search center-block' %>
<% end %>
