<% if content_for?(:home_header) %>
  <%= content_for(:home_header) %>
<% else %>
  <header class="header-main">
    <div class="container">
      <div class="row">
        <div class="col-sm-4 col-md-2">
          <a class="logo" href="/"><%= image_tag('logo_icon_red_subtitled.png') %></a>
        </div>
        <div class="col-sm-8 col-md-6">
          <%= render '/shared/search_form' %>
        </div>
        <div class="col-sm-12 col-md-4">
          <%= render '/shared/membership_links' %>
        </div>
      </div>
    </div>
  </header>
<% end %>
<nav class="navbar navbar-default home-nav">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#ah-navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="ah-navbar-collapse">
      <ul class="nav navbar-nav">
        <% about_us = current_page?('/about') || current_page?('/press-&amp;-media') || current_page?('/faq') || current_page?('/terms-of-service') || current_page?('/privacy-policy') %>
        <li class="dropdown<%= ' active' if about_us %>">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About Us <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'About', page_path('about') %></li>
            <li><%= link_to 'Press & Media', page_path('press-&amp;-media') %></li>
            <li><%= link_to 'FAQ', page_path('faq') %></li>
            <li><%= link_to 'Terms of Service', page_path('terms-of-service') %></li>
            <li><%= link_to 'Privacy Policy', page_path('privacy-policy') %></li>
          </ul>
        </li>
        <% news = BlogCategory.any? { |category| current_page?(blog_category_path(category)) } %>
        <li class="dropdown<%= ' active' if news %>">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">News <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <%= content_tag_for 'li', BlogCategory.menu.each do |blog_category| %>
              <%= link_to blog_category.name, blog_category_path(blog_category) %>
            <% end %>
          </ul>
        </li>
        <%= li_link_to_active_class 'Send Us News', '/send-us-news' %>
        <%= li_link_to_active_class 'Add a Hunting Destination', new_location_path %>
        <%= li_link_to_active_class 'Hunting Directory', '/browse' %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
