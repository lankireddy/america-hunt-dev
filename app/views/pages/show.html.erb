<div class="col-md-7">
  <%= content_tag_for :article, @page, itemscope: '', itemtype: 'https://schema.org/WebPage' do %>
      <header class="header-no-hero">
        <h1 class="h1-bold" itemprop="headline"><%= @page %></h1>
      </header>
      <section class="body" itemprop="text">
        <%= @page.body.html_safe %>
      </section>
      <% if @page.display_newsletter_sign_up %>
          <div class="page-newsletter-form">
            <%= render 'shared/newsletter_form' %>
          </div>
      <% end %>
  <% end %>
</div>
<div class="col-md-offset-1 col-md-4">
  <% if @page.featured_image.present? %>
    <%= image_tag @page.featured_image.url, class: 'img-responsive' %>
    <% if @page.caption.present? %>
      <p class="image-caption"><%= @page.caption %></p>
    <% end %>
  <% end %>
</div>
