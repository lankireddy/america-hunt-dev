<%= form_for([@location, (@review||@location.reviews.new)], remote: true, html: {'data-type': 'json', class: 'text-book'}) do |f| %>
  <h3>Add a Review</h3>
  <% if f.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(f.object.errors.count, 'error') %> prohibited this review from being saved:</h2>

      <ul>
      <% f.object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :star_rating, class:'sr-only' %>
    <%= f.text_field :star_rating, class:'rating', data: { min: 0, max: 5, step: '0.5', size:'xs', 'show-clear' => 'false', 'show-caption' => 'false'} %>
  </div>
  <div class="form-group">
    <%= f.label :body, class:'sr-only' %>
    <%= f.text_area :body, class:'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'Finish', class: 'btn btn-info' %>
  </div>
<% end %>
