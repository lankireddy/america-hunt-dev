<!DOCTYPE html>
<html>
<head>
  <!-- Google Tag Manager -->
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-KMHHND');</script>
  <!-- End Google Tag Manager -->
  <meta charset="utf-8">
  <title><%= @page_title or 'America Hunt' %></title>
  <meta property="og:title" content="<%= @page_title %>" />
  <meta name="description" content="<%= @page_description %>" />
  <meta property="og:description" content="<%= @page_description %>" />
  <% if @page_url.present? %>
      <meta property="og:url" content="<%= @page_url %>" />
      <link rel="canonical" href="<%= @page_url %>">
  <% end %>

  <%= content_for(:metas) %>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= @body_classes %> <%= yield :body_classes %>">
<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KMHHND"
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
<!--
<% if @top_ad.present? %>
  <%= link_to @top_ad.url, target: '_blank', class:'ad ad-header' do %>
    <%= image_tag @top_ad.image.url(:original), class: 'img-responsive'  %>
  <% end %>
<% end %>
-->
<% if content_for?(:content) %>
    <%= content_for(:content) %>
<%  else %>
  <header class="header-main">
    <div class="container">
      <div class="row">
        <div class="col-md-1">
          <a class="logo" href="/"><%= image_tag('logo_icon_red_subtitled.png') %></a>
        </div>
        <div class="col-md-8">
          <%= form_tag '#', method: 'get', class: 'location-search location-search-interior' do |f| %>
              <label for="location" class="sr-only">Where would you like to hunt?</label>
              <div class="input-group input-group-xl">
                <div class="input-group-btn">
                  <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                      <span class="glyphicon glyphicon-search"></span>
                  <% end %>
                </div>
                <%= select_tag 'state_alpha2', options_for_select(Location.states, selected: @state_alpha2), prompt: 'State?', class:'form-control', required: true %>
              </div>
          <% end %>
        </div>
        <div class="col-md-3">
          <%= render '/shared/membership_links' %>
        </div>
      </div>
    </div>
  </header>
  <% if content_for?(:pre_main) %>
  <div class="pre-main">
    <%= content_for(:pre_main) %>
  </div>
  <% end %>
    <%= render 'shared/flash', flash: flash if flash %>
    <main class="main">
    <div class="container" %>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </main>
<% end %>
<%= render '/shared/footer' %>
<div class="modal fade" tabindex="-1" role="dialog" id="login-modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Log In</h4>
      </div>
      <div class="modal-body">
        <%= render 'users/sessions/new', resource: User.new, resource_name: 'user', devise_mapping: Devise.mappings[:user] %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</body>
</html>
