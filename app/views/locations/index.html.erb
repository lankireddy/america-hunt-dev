<% content_for :pre_main do %>
  <%= render 'filters' %>
<% end %>
<div class="col-md-9">
  <div class="locations">
    <%= div_for(@locations, class:'panel panel-default', itemscope:'', itemtype:'http://schema.org/Place' ) do |location| %>
      <div class="panel-heading clearfix">
        <h3 class="panel-title pull-left location-name h3-bold"><%= link_to location, location_path(location, query: @query), itemprop:'url' %></h3>
        <%= link_to location.city_state, locations_path(query: location.city_state), class: 'pull-right city-state-link' %>
      </div>
      <%= link_to location_path(location, query: @query), class: 'panel-body' do %>
        <%= location.excerpt %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="col-md-2 col-md-offset-1">
  <a href="http://www.basspro.com/" target="_blank">
    <%= image_tag 'ads/bass-pro-shops.png', class:'img-responsive ad ad-sidebar' %>
  </a>
  <a href="http://yeti.com/" target="_blank">
    <%= image_tag 'ads/yeti.png', class:'img-responsive ad ad-sidebar' %>
  </a>
  <a href="http://www.drakewaterfowl.com/" target="_blank">
    <%= image_tag 'ads/drake.png', class:'img-responsive ad ad-sidebar' %>
  </a>
</div>