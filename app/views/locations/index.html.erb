<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table>
  <thead>
    <tr>
      <th>Travelier</th>
      <th>Name</th>
      <th>Website</th>
      <th>Contact page</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>Zip</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Opening date</th>
      <th>Featured</th>
      <th>Follow up</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.travelier_id %></td>
        <td><%= location.name %></td>
        <td><%= location.website %></td>
        <td><%= location.contact_page %></td>
        <td><%= location.phone %></td>
        <td><%= location.email %></td>
        <td><%= location.address_1 %></td>
        <td><%= location.address_2 %></td>
        <td><%= location.city %></td>
        <td><%= location.zip %></td>
        <td><%= location.lat %></td>
        <td><%= location.long %></td>
        <td><%= location.opening_date %></td>
        <td><%= location.featured %></td>
        <td><%= location.follow_up %></td>
        <td><%= location.description %></td>
        <td><%= link_to 'Show', location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>
