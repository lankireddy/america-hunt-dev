<div class="container">
  <div class="row">
    <%= form_tag '/locations', method: 'get', class:'location-search' do |f| %>
        <%= hidden_field_tag 'query', @query %>
        <div class="col-md-3">
          <div class="form-group form-group-lg">
            <label for="category_id" class="sr-only">How would you like to hunt?</label>
            <%= select_tag 'category_id', options_from_collection_for_select(@categories, 'id', 'name', @category_id), include_blank: 'How?', class: 'form-control' %>
          </div>
        </div>
        <div class="col-md-3">
          <%= submit_tag 'Search', class:'btn btn-lg btn-info' %>
        </div>
    <% end %>
  </div>
</div>
